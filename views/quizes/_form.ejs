<label for="preg" class="rem">Pregunta:</label>
<input type="text" id="preg" name="quiz[pregunta]" value="<%= quiz.pregunta %>"/>
<label for="resp" class="rem">Respuesta:</label>
<input type="text" id="resp" name="quiz[respuesta]" value="<%= quiz.respuesta %>"/>
<label for="tema" class="rem">Temática:</label>
<select id="tema" name="quiz[tematica]">
  <option value="Otro"
<% if (quiz.tematica === "Otro" || !(quiz.tematica)) { %>
  selected <% } %>
  >Otro</option>
  <option value="Humanidades"
<% if (quiz.tematica === "Humanidades") { %>
  selected <% } %>
  >Humanidades</option>
  <option value="Ocio"
<% if (quiz.tematica === "Ocio") { %>
  selected <% } %>
  >Ocio</option>
  <option value="Ciencia"
<% if (quiz.tematica === "Ciencia") { %>
  selected <% } %>
  >Ciencia</option>
  <option value="Tecnologia"
<% if (quiz.tematica === "Tecnologia") { %>
  selected <% } %>
  >Tecnología</option>
</select>
<a href="/quizes"><button type="button">Cancelar</button></a>
<input type="submit" value="Salvar">

